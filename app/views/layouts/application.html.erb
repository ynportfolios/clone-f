<!DOCTYPE html>
<html>
  <head>
    <title>Clone-F</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Clone-F</span>
              <% if logged_in? %>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              <% else %>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              <% end %>
            </button>
            <%= link_to "Clone-F", root_path, class: 'navbar-brand' %>
          </div>
          <div id="gnavi" class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <% if logged_in? %>
                <li>
                  <%= link_to "マイページ", user_path(current_user.id), class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to "ログアウト", session_path(current_user.id), method: :delete, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to "投稿一覧", pictures_path, class: 'nav-link' %>
                </li>
              <% else %>
                <li>
                  <%= link_to 'ユーザ登録', new_user_path, class: 'nav-link' %>
                </li>
                <li>
                  <%= link_to 'ログイン', new_session_path, class: 'nav-link' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <%= yield %>
    <footer>
      <p>© All rights reserved by Clone-T.</p>
    </footer>
  </body>
</html>