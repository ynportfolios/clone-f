<div class="container">
  <h1>お気に入り一覧</h1>

  <table>
    <thead>
      <tr>
        <th>Image　</th>
        <th>Content　</th>
        <th>Author</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <% if current_user %>
      <tbody>
        <% @pictures.each do |picture| %>
          <tr>
            <td><%= image_tag(picture.image.url) if picture.image && picture.image.url %></td>
            <td><%= picture.content %></td>
            <td><%= picture.user.name %></td>
            <td><%= link_to 'Show', picture %>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>

  <br>
</div>
